  "description": "Basic demo of signing functionality using vc-js and lds-jws2020",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc mocha -r ts-node/register --require source-map-support/register src/**/*.spec.ts",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --require dotenv/config dist/index.js",
    "postbuild": "npm run copy-files",
    "copy-files": "copyfiles -u 1 src/**/*.yaml dist/"
  },
  "keywords": [],
  "author": "Kim Hamilton Duffy",
  "license": "MIT",
  "repository": "git@github.com:digitalcredentials/sign-and-verify.git",
  "dependencies": {
    "@transmute/json-web-key-2020": "^1.1.0",
    "@transmute/json-web-signature-2020": "^1.1.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.8.0",
    "fastify-cors": "^4.1.0",
    "fastify-raw-body": "^3.0.0",
    "fastify-sensible": "^3.0.1",
    "fastify-swagger": "^3.5.0",
    "http-signature": "^1.3.5",
    "jose": "^1.28.0",
    "jsonld": "^3.2.0",
    "jsonld-signatures": "^5.2.0",
    "uuid": "^8.3.1",
    "vc-js": "^0.6.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "@types/sinon": "^9.0.8",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.4.0",
    "fastify-log": "^1.2.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
